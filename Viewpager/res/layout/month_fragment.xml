<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtCurrentMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="dsadsadsadsad"
        android:textSize="18sp" />

    <GridView
        android:background="@drawable/shadow_selector"
        android:id="@+id/monthGrid_month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/txtCurrentMonth"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtCurrentMonth"
        android:layout_marginTop="31dp"
        android:listSelector="#00000000"
        android:numColumns="7"
        android:scrollbars="none"
        android:smoothScrollbar="true"
        android:splitMotionEvents="false"
        android:verticalSpacing="1dp" >
    </GridView>

</RelativeLayout>
